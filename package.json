{
    "name": "@badideas/nativescript-push",
    "version": "1.0.0",
    "description": "Very simple push notification plugin",
    "main": "./label",
    "typings": "./label.d.ts",
    "nativescript": {
        "platforms": {
            "android": "3.0.0",
            "ios": "3.0.0"
        }
    },
    "scripts": {
        "setup": "ts-patch install",
        "prepare": "npm run setup",
        "tsc": "cpy '**/*.d.ts' '../plugin' --parents --cwd=src && tsc -skipLibCheck",
        "clean": "rimraf ./plugin/**/*.d.ts ./plugin/**/*.js ./plugin/**/*.js.map plugin/node_modules plugin/package-lock.json",
        "build.plugin": "npm run tsc && cp README.md plugin/",
        "build.hooks": " tsc -skipLibCheck -p tsconfig.hooks.json",
        "build.android": "bash src-native/android/build.sh",
        "build.ios": "bash src-native/ios/build.sh",
        "build.native": "npm run build.android && npm run build.ios",
        "build": "npm run build.plugin && npm run build.hooks",
        "publish": "npm run setup && npm run build && lerna publish",
        "demo.ios": "npm i && npm run tsc && cd demo && tns run ios",
        "demo.android": "npm i && npm run tsc && cd demo && tns run android",
        "clean.demo": "rimraf demo/hooks demo/node_modules demo/platforms",
        "plugin.watch.tsc": "npm run tsc -- -w",
        "plugin.watch.android": "npm i && npm-watch build.android",
        "plugin.watch.ios": "npm i && npm-watch build.ios",
        "plugin.watch": "npm run plugin.watch.tsc & npm run plugin.watch.android & npm run plugin.watch.ios",
        "commitmsg": "commitlint -e $GIT_PARAMS"
    },
    "keywords": [
        "NativeScript",
        "JavaScript",
        "Android",
        "iOS"
    ],
    "author": {
        "name": "Tyler Flint",
        "email": "tylerflint@gmail.com"
    },
    "bugs": {
        "url": "https://github.com/tylerflint/nativescript-push/issues"
    },
    "license": "Apache-2.0",
    "homepage": "https://github.com/tylerflint/nativescript-push",
    "readmeFilename": "README.md",
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@nativescript/core": "7.0.9",
        "@nativescript/types-android": "7.0.4",
        "@nativescript/types-ios": "7.0.4",
        "@nativescript/webpack": "~3.0.5",
        "@types/node": "^14.11.2",
        "@typescript-eslint/eslint-plugin": "4.3.0",
        "@typescript-eslint/parser": "4.3.0",
        "cpy-cli": "^3.1.1",
        "eslint": "7.10.0",
        "husky": "^4.3.0",
        "lerna": "^3.22.1",
        "@nativescript/hook": "~2.0.0",
        "npm-watch": "^0.7.0",
        "prompt": "^1.0.0",
        "rimraf": "^3.0.2",
        "ts-patch": "1.3.0",
        "typescript": "~3.9.7"
    },
    "bootstrapper": "nativescript-plugin-seed",
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "dependencies": {
        "ts-node": "^9.1.1"
    }
}
